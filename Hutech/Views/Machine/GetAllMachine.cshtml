@using System.Globalization;
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> Machine
                        <a href="/Machine/AddMachine">Add Machine</a>
                    </div>
                    <div class="card-body">
                        <table class="table table-responsive-sm">
                            <thead>
                                <tr>
                                    <th>Machine Name</th>
                                    <th>PurchaseDate</th>
                                    <th>Price($)</th>
                                    <th>Brand</th>
                                    <th>Vednor</th>
                                    <th>Warranty(Year)</th>
                                    <th>Service Time</th>
                                    <th>Action</th>
                                    @*<th>Delete</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@Model[i].Name</td>
                                        <td>@Model[i].PurchaseDate.ToString("dd/MM/yyyy")</td>
                                        <td>@Model[i].Price.ToString("C", CultureInfo.CreateSpecificCulture("en-US")) </td>
                                        <td>@Model[i].Brand</td>
                                        <td>@Model[i].Vednor</td>
                                        <td>@Model[i].Warranty</td>
                                        <td>@Model[i].ServiceInterval @Model[i].Interval</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-secondary dropdown-toggle" id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                    <a class="dropdown-item" href="/Machine/EditMachine?id=@Model[i].Id">Edit</a>
                                                    <a class="dropdown-item" href="/Machine/DeleteMachine?id=@Model[i].Id" onclick="return confirm('Are you sure want to delete?')">Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                       @* <td><a href="/Machine/EditMachine?id=@Model[i].Id">Edit</a></td>
                                        <td><a href="/Machine/DeleteMachine?id=@Model[i].Id" onclick="return confirm('Are you sure want to delete?')">Delete</a></td>*@
                                    </tr>
                                }

                            </tbody>
                        </table>
                        @* <ul class="pagination">
                        <li class="page-item">
                        <a class="page-link" href="#">Prev</a>
                        </li>
                        <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                        </li>
                        <li class="page-item">
                        <a class="page-link" href="#">2</a>
                        </li>
                        <li class="page-item">
                        <a class="page-link" href="#">3</a>
                        </li>
                        <li class="page-item">
                        <a class="page-link" href="#">4</a>
                        </li>
                        <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                        </li>
                        </ul>*@
                    </div>
                </div>
            </div>
            <!-- /.col-->

        </div>
        <!-- /.row-->
    </div>
</div>
