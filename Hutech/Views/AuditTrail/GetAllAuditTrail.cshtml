
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> Audit Trail
                    </div>
                    <div class="card-body">
                        <div class="col-lg-12">
                            @*<div class="card">*@
                            <div class="form-group">
                                <label for="company">From Date</label>
                                <input type="date" id="fromdate" value="@ViewBag.StartDate" />&nbsp;&nbsp;&nbsp;
                                <label for="company">To Date</label>
                                <input type="date" id="todate" value="@ViewBag.EndDate" />&nbsp;&nbsp;&nbsp;
                                <button class="btn btn-primary" type="button" id="GenerateReport">Report</button>
                                <label for="company">Enter Keyword To search</label>
                                <input type="text" id="keyword" placeholder="Enter Keyword to search" onkeypress="searchForKeyword(event)" value="@ViewBag.Keyword" />
                                <div class="export-btn"><a class="dic-action-col" href="/AuditTrail/ExportAuditTrail?fdate=@ViewBag.StartDate&tdate=@ViewBag.EndDate&keyword=@ViewBag.Keyword">Export to Excel</a></div>

                            </div>
                        </div>
                        @*<div class="form-group">
                            <label for="company">Enter Keyword To search</label>
                            <input type="text" id="keyword" placeholder="Enter Keyword to search" onkeypress="searchForKeyword(event)" value="@ViewBag.Keyword" />
                        </div>*@
                        @*</div>*@
                    <table class="table table-responsive-sm">
                        <thead>
                            <tr>
                                <th>AuditId</th>
                                <th>Module</th>
                                <th>DateTime</th>
                                <th>UserId</th>
                                <th>Description</th>
                                <td>Message</td>
                            </tr>
                        </thead>
                            @{
                                int recordsPerPage = 10;
                                int pageNumber = Model.CurrentPage;
                                int pageSize = pageNumber + 4;
                                int rowNo = ((pageNumber - 1) * recordsPerPage);
                            }
                        <tbody>
                                @for (int i = 0; i < Model.GridRecords.Count; i++)
                            {
                                <tr>
                                        <td>@Model.GridRecords[i].AuditId</td>
                                        <td>@Model.GridRecords[i].ModuleName</td>
                                        <td>@Model.GridRecords[i].CreatedDatetime</td>
                                        <td>@Model.GridRecords[i].UserId</td>
                                        <td>@Model.GridRecords[i].Description</td>
                                        <td>@Model.GridRecords[i].Message</td>

                                </tr>
                            }

                        </tbody>
                    </table>
                        @if (Model.TotalPages > 1)
                        {
                            <nav>
                                <ul class="pagination">
                                    @if (pageNumber > 1)
                                    {
                                        int prevPage = pageNumber - 1;
                                        <li class="page-item">
                                            <a class="page-link" href="/AuditTrail/GetAllAuditTrail?pageNumber=@prevPage&keyword=@ViewBag.Keyword&tdate=@ViewBag.EndDate&fdate=@ViewBag.StartDate">Prev</a>
                                        </li>
                                    }
                                    @for (int i = pageNumber; i <= Model.TotalPages && i <= pageSize; i++)
                                    {
                                        if (i == pageNumber)
                                        {
                                            <li class="page-item active">
                                                <a class="page-link" href="/AuditTrail/GetAllAuditTrail?pageNumber=@i&keyword=@ViewBag.Keyword&tdate=@ViewBag.EndDate&fdate=@ViewBag.StartDate">@i</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="/AuditTrail/GetAllAuditTrail?pageNumber=@i&keyword=@ViewBag.Keyword&tdate=@ViewBag.EndDate&fdate=@ViewBag.StartDate">@i</a>
                                            </li>
                                        }
                                    }
                                    @if (pageNumber < Model.TotalPages)
                                    {
                                        int nextPage = pageNumber + 1;
                                        <li class="page-item">
                                            <a class="page-link" href="/AuditTrail/GetAllAuditTrail?pageNumber=@nextPage&keyword=@ViewBag.Keyword&tdate=@ViewBag.EndDate&fdate=@ViewBag.StartDate">Next</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                </div>
            </div>
        </div>
        <!-- /.col-->
        </div>

    </div>
    <!-- /.row-->
</div>
</div>
<script>
    $("#GenerateReport").click(function () {
        var fdate = $("#fromdate").val();
        var tdate = $("#todate").val();
        var word = $("#keyword").val();
        url = "/AuditTrail/GetAllAuditTrail/?fDate=" + fdate + "&tDate=" + tdate + "&keyword=" + word;
        window.location.href = url;
    })
    function searchForKeyword(event) {
        var x = event.code;
        if (x == "Enter") {
            var word = $("#keyword").val();
            var fdate = $("#fromdate").val();
            var tdate = $("#todate").val();
            url = "/AuditTrail/GetAllAuditTrail/?fDate=" + fdate + "&tDate=" + tdate + "&keyword=" + word;
            window.location.href = url;
        }

    }
</script>