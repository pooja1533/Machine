
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> Audit Trail
                    </div>
                    <div class="card-body">
                        <div class="col-lg-12">
                            @*<div class="card">*@
                            <div class="form-group">
                                <label for="company">From Date</label>
                                <input type="date" id="fromdate" value="@ViewBag.StartDate" />&nbsp;&nbsp;&nbsp;
                                <label for="company">To Date</label>
                                <input type="date" id="todate" value="@ViewBag.EndDate" />&nbsp;&nbsp;&nbsp;
                                <button class="btn btn-primary" type="button" id="GenerateReport">Report</button>
                                <label for="company">Enter Keyword To search</label>
                                <input type="text" id="keyword" placeholder="Enter Keyword to search" onkeypress="searchForKeyword(event)" value="@ViewBag.Keyword" />
                            </div>
                        </div>
                        @*<div class="form-group">
                            <label for="company">Enter Keyword To search</label>
                            <input type="text" id="keyword" placeholder="Enter Keyword to search" onkeypress="searchForKeyword(event)" value="@ViewBag.Keyword" />
                        </div>*@
                        @*</div>*@
                    <table class="table table-responsive-sm">
                        <thead>
                            <tr>
                                <th>Module</th>
                                <th>DateTime</th>
                                <th>UserId</th>
                                <th>Description</th>
                                <td>Message</td>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@Model[i].ControllerName</td>
                                    <td>@Model[i].CurrentDatetime</td>
                                    <td>@Model[i].UserId</td>
                                    <td>@Model[i].Description</td>
                                    <td>@Model[i].Message</td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.col-->
        </div>

    </div>
    <!-- /.row-->
</div>
</div>
<script>
    $("#GenerateReport").click(function () {
        var fdate = $("#fromdate").val();
        var tdate = $("#todate").val();
        var word = $("#keyword").val();
        url = "/AuditTrail/GetAllAuditTrail/?fDate=" + fdate + "&tDate=" + tdate + "&keyword=" + word;
        window.location.href = url;
    })
    function searchForKeyword(event) {
        var x = event.code;
        if (x == "Enter") {
            var word = $("#keyword").val();
            var fdate = $("#fromdate").val();
            var tdate = $("#todate").val();
            url = "/AuditTrail/GetAllAuditTrail/?fDate=" + fdate + "&tDate=" + tdate + "&keyword=" + word;
            window.location.href = url;
        }

    }
</script>