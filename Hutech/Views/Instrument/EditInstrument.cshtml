@model Hutech.Models.InstrumentDocumentViewModel;
@using (Html.BeginForm("EditInstrument", "Instrument", FormMethod.Post, new { enctype = "multipart/form-data", onsubmit = "validateForm(event)" }))
{
    @*<form class="horizontal" method="post" asp-controller="Instrument" asp-action="EditInstrument" enctype="multipart/form-data">
*@    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <strong>Edit Instrument</strong>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="company">Name</label>
                    @Html.HiddenFor(x=>x.Id)
                    @Html.TextBoxFor(x=>x.Name,new{Placeholder="Enter Instrument Name",@class="form-control"})
                    @Html.ValidationMessageFor(x=>x.Name,"",new {@class="text-danger"})
                </div>

                @if (Model != null)
                {
                    <div class="form-group">
                        <label for="company">Uploaded Documents</label><br />
                        @foreach (var document in Model.UplodedFile)
                        {
                            <a href="/Instrument/Download?fileName=@document.FilePath">@document.FileName</a>
                            <a href="/Instrument/DeleteDocument?documentId=@document.Id&instrumentId=@Model.Id"><i class="fa fa-trash-o"></i></a>
                            <br />
                        }
                    </div>

                }

                <div class="form-group">
                    <label for="company">Select Multiple Files</label>
                    <input asp-for="Files" class="form-control" multiple />
                    <span asp-validation-for="Files" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="company">Status</label>
                    <div class="input-prepend input-group">
                        @Html.RadioButtonFor(x => x.IsActive, "true")<label for="company" class="status ">Active</label> &nbsp;&nbsp;
                        @Html.RadioButtonFor(x => x.IsActive, "false")<label for="company" class="status frequencyUnit">InActive</label>
                    </div>
                </div>
                <div class="form-actions">
                    <input class="btn btn-primary" type="submit" value="Save changes">
                    <button class="btn btn-secondary" type="button" onclick="window.history.back()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}
