@model Hutech.Models.TeamViewModel;
<form class="horizontal" method="post" asp-controller="Team" asp-action="AddTeam" asp-antiforgery="true">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <strong>@_localizer.Getkey("Add Team")</strong>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="company">@_localizer.Getkey("Name*")</label>
                    @Html.TextBoxFor(x => x.Name, new { Placeholder = _localizer.Getkey("Enter Team Name"), @class = "form-control", maxlength = "50",autofocus = "autofocus" })
                    @Html.ValidationMessageFor(x=>x.Name,"", new { @class = "text-danger"})
                    @*<input class="form-control" id="company" type="text" placeholder="Enter your company name">*@
                </div>
                <div class="form-group">
                    <label for="company">@_localizer.Getkey("Location*")</label>
                    @Html.DropDownListFor(x=>x.LocationId,Model.locations,_localizer.Getkey("Please select Location"),new {@class="form-control processbank"})
                    @Html.ValidationMessageFor(x=>x.LocationId,"", new { @class = "text-danger"})
                    @*<input class="form-control" id="company" type="text" placeholder="Enter your company name">*@
                </div>
                <div class="form-group">
                    <label for="company">@_localizer.Getkey("Department*")</label>
                    @Html.DropDownListFor(x => x.DepartmentId, Model.deparments,_localizer.Getkey("Please select Department"), new { @class = "form-control processbank" })
                    @Html.ValidationMessageFor(x => x.DepartmentId, "", new { @class = "text-danger" })
                    @*<input class="form-control" id="company" type="text" placeholder="Enter your company name">*@
                </div>
                <div class="form-actions">
                    <button class="btn btn-primary" type="submit">@_localizer.Getkey("Save changes")</button>
                    <button class="btn btn-secondary" type="button" onclick="window.history.back()">@_localizer.Getkey("Cancel")</button>
                </div>
            </div>
        </div>
    </div>
</form>
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@TempData["message"]");
            var url = "@TempData["RedirectURl"]";
            window.location.href = url;
        };
    </script>
}