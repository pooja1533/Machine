@model Hutech.Models.RoleViewModel;
<form class="horizontal" method="post" asp-controller="Role" asp-action="EditRole" asp-antiforgery="true">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <strong>Edit Role</strong>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="company">Name</label>
                    @Html.HiddenFor(x=>x.Id)
                    @Html.TextBoxFor(x => x.Name, new { Placeholder = "Enter Role Name", @class = "form-control", maxlength = "50" })
                    @Html.ValidationMessageFor(x=>x.Name,"",new {@class="text-danger"})
                </div>
                <div class="form-actions">
                    <button class="btn btn-primary" type="submit">Save changes</button>
                    <button class="btn btn-secondary" type="button" onclick="window.history.back()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@TempData["message"]");
            var url = "@TempData["RedirectURl"]";
            var Id = $("#Id").val();
            window.location.href = url + "?id=" + Id;
        };
    </script>
}