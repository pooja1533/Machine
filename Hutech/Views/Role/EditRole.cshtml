@model Hutech.Models.RoleViewModel;
<form class="horizontal" method="post" asp-controller="Role" asp-action="EditRole">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <strong>Add Role</strong>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="company">Name</label>
                    @Html.HiddenFor(x=>x.Id)
                    @Html.TextBoxFor(x=>x.Name,new{Placeholder="Enter Role Name",@class="form-control"})
                    @Html.ValidationMessageFor(x=>x.Name,"",new {@class="text-danger"})
                </div>
                <div class="form-actions">
                    <button class="btn btn-primary" type="submit">Save changes</button>
                    <button class="btn btn-secondary" type="button" onclick="window.history.back()">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</form>
