@{
    Layout = !Context.Request.Headers["X-Requested-With"].ToString().Equals("XMLHttpRequest", StringComparison.OrdinalIgnoreCase) ? "_Layout" : null;
}

<div id="content">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <i class="fa fa-align-justify"></i> Location
                            <a href="/Location/AddLocation">Add Location</a>
                        </div>
                        <div class="card-body">
                            <table class="table table-responsive-sm">
                                <thead>
                                    <tr>
                                        <th>Location Name</th>
                                        <th>Updated By/Role</th>
                                        <th>Updated On</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                        @*<th>Delete</th>*@
                                    </tr>
                                </thead>
                                @{
                                    int recordsPerPage = 10;
                                    int pageNumber = Model.CurrentPage;
                                    int pageSize = pageNumber + 4;
                                    int rowNo = ((pageNumber - 1) * recordsPerPage);
                                }
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.TextBox("LocationName", null, new { @class = "form-control", @placeholder = "Search", @onKeyUp = "Filter()", @value = @ViewBag.LocationName != null ? @ViewBag.LocationName : "" })
                                        </td>
                                        <td>@Html.TextBox("updatedBy", null, new { @class = "form-control", @placeholder = "Search", @onKeyUp = "Filter()", @value = @ViewBag.UpdatedBy != null ? @ViewBag.UpdatedBy : "" })</td>
                                        <td><input type="date" class="form-control" id="updatedDate" name="updatedDate" onchange="Filter()" value='@((ViewBag.updatedDate != null) ? ViewBag.updatedDate.ToString("yyyy-MM-dd") : "")'></td>
                                        <td>
                                            @if (ViewBag.status == "1")
                                            {
                                                <select id="status" name="Status" class="form-control" onchange="Filter()">
                                                <option value="1" selected>Active</option>
                                                <option value="0" >Inactive</option>
                                                </select>
                                            }
                                            else if(ViewBag.status=="0")
                                            {
                                                <select id="status" name="Status" class="form-control" onchange="Filter()">
                                                    <option value="1" >Active</option>
                                                    <option value="0" selected>Inactive</option>
                                                </select>
                                                
                                            }
                                            else
                                            {
                                                <select id="status" name="Status" class="form-control" onchange="Filter()">
                                                <option value="1" >Active</option>
                                                <option value="0" >Inactive</option>
                                            </select>
                                            }
                                        </td>
                                    </tr>
                                    @for (int i = 0; i < Model.GridRecords.Count; i++)
                                    {
                                        <tr>
                                            <td>@Model.GridRecords[i].Name</td>
                                            <td>@Model.GridRecords[i].FullName (@Model.GridRecords[i].Role)</td>
                                            @if (Model.GridRecords[i].DateModifiedUtc != null)
                                            {
                                                <td>@Model.GridRecords[i].DateModifiedUtc.ToString("dd MMM yyyy HH:mm")</td>
                                            }
                                            else
                                            {
                                                <td>@Model.GridRecords[i].DatecreatedUtc.ToString("dd MMM yyyy HH:mm")</td>
                                            }
                                            @if (Model.GridRecords[i].IsActive)
                                            {
                                                <td>Active</td>
                                            }
                                            else
                                            {
                                                <td>InActive</td>
                                            }
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-secondary dropdown-toggle" id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                        <a class="dropdown-item" href="/Location/EditLocation?id=@Model.GridRecords[i].Id">Edit</a>
                                                        <a class="dropdown-item" href="/Location/DeleteLocation?id=@Model.GridRecords[i].Id" onclick="return confirm('Are you sure want to delete?')">Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                            @*<td><a href="/Role/EditRole?id=@Model[i].Id">Edit</a></td>
                                        <td><a href="/Role/DeleteRole?id=@Model[i].Id" onclick="return confirm('Are you sure want to delete?')">Delete</a></td>*@
                                        </tr>
                                    }

                                </tbody>
                            </table>
                            @if (Model.TotalPages > 1)
                            {
                                <nav>
                                    <ul class="pagination">
                                        @if (pageNumber > 1)
                                        {
                                            int prevPage = pageNumber - 1;
                                            <li class="page-item">
                                                <a class="page-link" href="/Location/GetAllLocation?pageNumber=@prevPage">Prev</a>
                                            </li>
                                        }
                                        @for (int i = pageNumber; i <= Model.TotalPages && i <= pageSize; i++)
                                        {
                                            if (i == pageNumber)
                                            {
                                                <li class="page-item active">
                                                    <a class="page-link" href="/Location/GetAllLocation?pageNumber=@i">@i</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="/Location/GetAllLocation?pageNumber=@i">@i</a>
                                                </li>
                                            }
                                        }
                                        @if (pageNumber < Model.TotalPages)
                                        {
                                            int nextPage = pageNumber + 1;
                                            <li class="page-item">
                                                <a class="page-link" href="/Location/GetAllLocation?pageNumber=@nextPage">Next</a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            }
                            @* <ul class="pagination">
                            <li class="page-item">
                            <a class="page-link" href="#">Prev</a>
                            </li>
                            <li class="page-item active">
                            <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                            <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                            <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                            <a class="page-link" href="#">4</a>
                            </li>
                            <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                            </li>
                            </ul>*@
                        </div>
                    </div>
                </div>
                <!-- /.col-->

            </div>
            <!-- /.row-->
        </div>
    </div>
</div>


@if (TempData["message"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@TempData["message"]");
            var url = "@TempData["RedirectURl"]";
            window.location.href = url;
        };
    </script>
}
<script type="text/javascript">
    $(document).ready(function(){
        var value = '@ViewBag.updatedDate';
    })
    function Filter() {
        let locationName = $("#LocationName").val();
        let updatebyOrRole = $("#updatedBy").val();
        var selectElement = document.getElementById("status");
        var selectedValue = selectElement.value;
        let status = selectedValue;
        let date = $("#updatedDate").val();
        if (locationName == "" && locationName.length == 0)
            locationName = null;
        if (updatebyOrRole == "" && updatebyOrRole.length == 0)
            updatebyOrRole = null;
        if (date == "")
            date = null;
        var model = {
            locationName: locationName,
            updatedBy: updatebyOrRole,
            status: status,
            updatedDate: date
        };
        $.ajax({
            url: '/Location/GetAllLocation',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(model),
            success: function (response) {
                // Handle successful response from the server
                var div = document.getElementById("content");
                div.innerHTML = response;
            },
            error: function (xhr, status, error) {
                // Handle error response from the server
                console.error(xhr.responseText);
            }
        });
        // if(locationName!="" && locationName.length>0)
        //     window.location.href = "/Location/GetAllLocation?LocationName=" + locationName;
        // else if (updatebyOrRole != "" && updatebyOrRole.length>0)
        //             window.location.href = "/Location/GetAllLocation?updateby=" + updatebyOrRole;
        // else
        //     window.location.href = "/Location/GetAllLocation"
    }
</script>
