<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> Instrument Id
                        <a href="/InstrumentId/AddInstrumentId">Add Instrument Id</a>
                    </div>
                    <div class="card-body">
                        <table class="table table-responsive-sm">
                            <thead>
                                <tr>
                                    <th>Instrument Id</th>
                                    <th>Model</th>
                                    <th>InstrumentSerial</th>
                                    <th>Instrument Name</th>
                                    <th>Location Name</th>
                                    <th>Team Name</th>
                                    <th>TeamLocation</th>
                                    <td>Status</td>
                                    <th>Action</th>
                                    @*<th>Delete</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@Model[i].InstrumentsId</td>
                                        <td>@Model[i].Model</td>
                                        <td>@Model[i].InstrumentSerial</td>
                                        <td>@Model[i].InstrumentName</td>
                                        <td>@Model[i].LocationName</td>
                                        <td>@Model[i].TeamName</td>
                                        <td>@Model[i].TeamLocation</td>
                                        @if (Model[i].IsActive)
                                        {
                                            <td>Active</td>
                                        }
                                        else
                                        {
                                            <td>InActive</td>
                                        }
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-secondary dropdown-toggle" id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                    <a class="dropdown-item" href="/InstrumentId/EditInstrumentId?id=@Model[i].Id">Edit</a>
                                                    <a class="dropdown-item" href="/InstrumentId/DeleteInstrumentId?id=@Model[i].Id" onclick="return confirm('Are you sure want to delete?')">Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- /.col-->

        </div>
        <!-- /.row-->
    </div>
</div>
