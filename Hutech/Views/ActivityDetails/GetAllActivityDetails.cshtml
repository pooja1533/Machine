@model Hutech.Models.ActivityDetailsViewModel;
<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> Activity Detail
                        <a href="/ActivityDetails/AddActivityDetails">Add Activity Detail</a>
                    </div>
                    <div class="card-body">
                        <div class="col-lg-12">
                            @*<div class="card">*@
                                <div class="form-group">
                                    <label for="company">Serach Activity Detail By User</label>
                                    @Html.DropDownListFor(x=>x.UserId,Model.User,"Please select Instrument",new {@class="form-control processbank",onchange="changeUser()"})
                                </div>
                            @*</div>*@
                        </div>
                        <table class="table table-responsive-sm" id="activity">
                            <thead>
                                <tr>
                                    <th>Instrument Name</th>
                                    <th>Instrument Serial</th>
                                    <th>Model</th>
                                    <th>Location Name</th>
                                    <th>Days</th>
                                    <th>Frequency</th>
                                    <th>Team Location</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            @{
                                int recordsPerPage = 10;
                                int pageNumber = (int)Model.CurrentPage;
                                int pageSize = pageNumber + 4;
                                int rowNo = ((pageNumber - 1) * recordsPerPage);
                            }
                            <tbody>
                                @for (int i = 0; i < Model.ActivityDetails.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.ActivityDetails[i].InstrumentName</td>
                                        <td>@Model.ActivityDetails[i].InstrumentSerial</td>
                                        <td>@Model.ActivityDetails[i].Model</td>
                                        <td>@Model.ActivityDetails[i].LocationName</td>
                                        <td>@Model.ActivityDetails[i].Days</td>
                                        <td>@Model.ActivityDetails[i].Frequency</td>
                                        <td>@Model.ActivityDetails[i].TeamLocation</td>
                                        @if (Model.ActivityDetails[i].IsActive)
                                        {
                                            <td>Active</td>
                                        }
                                        else
                                        {
                                            <td>InActive</td>
                                        }
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-secondary dropdown-toggle" id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                    <a class="dropdown-item" href="/ActivityDetails/EditActivityDetails?id=@Model.ActivityDetails[i].Id">Edit</a>
                                                    <a class="dropdown-item" href="/ActivityDetails/DeleteActivityDetails?id=@Model.ActivityDetails[i].Id" onclick="return confirm('Are you sure want to delete?')">Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        @if (Model.TotalPages > 1)
                        {
                            <nav>
                                <ul class="pagination">
                                    @if (pageNumber > 1)
                                    {
                                        int prevPage = pageNumber - 1;
                                        <li class="page-item">
                                            <a class="page-link" href="/ActivityDetails/GetAllActivityDetails?pageNumber=@prevPage">Prev</a>
                                        </li>
                                    }
                                    @for (int i = pageNumber; i <= Model.TotalPages && i <= pageSize; i++)
                                    {
                                        if (i == pageNumber)
                                        {
                                            <li class="page-item active">
                                                <a class="page-link" href="/ActivityDetails/GetAllActivityDetails?pageNumber=@i">@i</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="/ActivityDetails/GetAllActivityDetails?pageNumber=@i">@i</a>
                                            </li>
                                        }
                                    }
                                    @if (pageNumber < Model.TotalPages)
                                    {
                                        int nextPage = pageNumber + 1;
                                        <li class="page-item">
                                            <a class="page-link" href="/ActivityDetails/GetAllActivityDetails?pageNumber=@nextPage">Next</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
            <!-- /.col-->

        </div>
        <!-- /.row-->
    </div>
</div>
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@TempData["message"]");
            var url = "@TempData["RedirectURl"]";
            window.location.href = url;
        };
    </script>
}
<script type="text/javascript">
    function changeUser() {
        var userId = $("#UserId option:selected").val();
        url = "/ActivityDetails/GetAllActivityDetails/?userId=" + userId;
        window.location.href = url;
    }
</script>