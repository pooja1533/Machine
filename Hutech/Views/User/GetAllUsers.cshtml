                            <table class="table table-responsive-sm">
                                <thead>
                                    <tr>
                                        <th>User Type</th>
                                        <th>Full Name</th>
                                        <th>User Name</th>
                                        <th>Email</th>
                                        <th>Employee Id</th>
                                        <th>Remark</th>
                                        <th>Department</th>
                                        <th>User Role</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                @{
                                    int recordsPerPage = 10;
                                    int pageNumber = Model.CurrentPage;
                                    int pageSize = pageNumber + 4;
                                    int rowNo = ((pageNumber - 1) * recordsPerPage);
                                }
                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DropDownListFor(x => x.SelectedUserType, Model.UserTypes,"Select UserType", new { @class = "form-control processbank", @onchange = "Filter()" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", @placeholder = "Search", @onKeyUp = "Filter()", @value = @ViewBag.FullName != null ? @ViewBag.FullName : "" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @placeholder = "Search", @onKeyUp = "Filter()", @value = @ViewBag.UserName != null ? @ViewBag.UserName : "" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EmailId, new { @class = "form-control", @placeholder = "Search", @onKeyUp = "Filter()", @value = @ViewBag.EmailId != null ? @ViewBag.EmailId : "" })
                                        </td>
                                        <td>
                                            @Html.TextBoxFor(x => x.EmployeeId, new { @class = "form-control", @placeholder = "Search", @onKeyUp = "Filter()", @value = @ViewBag.EmployeeId != null ? @ViewBag.EmployeeId : "" })
                                        </td>
                                        <td></td>
                                        <td>
                                            @Html.DropDownListFor(x=>x.SelectedDepartment,Model.Departments,"Select Department",new {@class="form-control processbank",@onchange="Filter()"})
                                        </td>
                                        <td>
                                            @Html.DropDownListFor(x => x.SelectedRole, Model.Roles,"Select Role", new { @class = "form-control processbank", @onchange = "Filter()" })
                                        </td>
                                        <td>
                                            @Html.DropDownListFor(x => x.SelectedLocation, Model.Locations,"Select Location", new { @class = "form-control processbank", @onchange = "Filter()" })
                                        </td>
                                        <td>
                                            @Html.DropDownListFor(x => x.SelectedStatus, Model.Status,"Select Status", new { @class = "form-control processbank", @onchange = "Filter()" })
                                        </td>
                                    </tr>
                                    @for (int i = 0; i < Model.userViewModels.Count; i++)
                                    {
                                        <tr>
                                            <td>@Model.userViewModels[i].UserType</td>
                                            <td>@Model.userViewModels[i].FullName</td>
                                            <td>@Model.userViewModels[i].WindowsUserName</td>
                                            <td>@Model.userViewModels[i].Email</td>
                                            <td>@Model.userViewModels[i].EmployeeId</td>
                                            <td>@Model.userViewModels[i].Remark</td>
                                            <td>@Model.userViewModels[i].DepartmentName</td>
                                            <td>@Model.userViewModels[i].RoleName</td>
                                            <td>@Model.userViewModels[i].LocationName</td>
                                            <td>@Model.userViewModels[i].UserstatusName</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <button class="btn btn-secondary dropdown-toggle" id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                        @if (Model.userViewModels[i].UserstatusName != "Performed")
                                                        {
                                                            <a class="dropdown-item" href="#" id="@Model.userViewModels[i].UserId" onclick="performAction(this.id)">Execute</a>
                                                        }
                                                        <a class="dropdown-item" href="/User/EditUser?Id=@Model.userViewModels[i].UserId">Edit</a>
                                                        <a class="dropdown-item" href="/User/DeleteUser?Id=@Model.userViewModels[i].UserId" onclick="return confirm('Are you sure want to delete?')">Deactivate</a>
                                                    </div>
                                                </div>
                                            </td>


                                        </tr>
                                    }

                                </tbody>
                            </table>
                            @if (Model.TotalPages > 1)
                            {
                                <nav>
                                    <ul class="pagination">
                                        @if (pageNumber > 1)
                                        {
                                            int prevPage = pageNumber - 1;
                                            <li class="page-item">
                                                <a class="page-link" href="/User/GetAllUsers?PageNumber=@prevPage&FullName=@Model.FullName&UserName=@Model.UserName&EmailId=@Model.EmailId&Status=@Model.SelectedStatus&EmployeeId=@Model.EmployeeId&userType=@Model.SelectedUserType&department=@Model.SelectedDepartment&role=@Model.SelectedRole&location=@Model.SelectedLocation">Prev</a>
                                            </li>
                                        }
                                        @for (int i = pageNumber; i <= Model.TotalPages && i <= pageSize; i++)
                                        {
                                            if (i == pageNumber)
                                            {
                                                <li class="page-item active">
                                                    <a class="page-link" href="/User/GetAllUsers?PageNumber=@i&FullName=@Model.FullName&UserName=@Model.UserName&EmailId=@Model.EmailId&Status=@Model.SelectedStatus&EmployeeId=@Model.EmployeeId&userType=@Model.SelectedUserType&department=@Model.SelectedDepartment&role=@Model.SelectedRole&location=@Model.SelectedLocation">@i</a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li class="page-item">
                                                    <a class="page-link" href="/User/GetAllUsers?PageNumber=@i&FullName=@Model.FullName&UserName=@Model.UserName&EmailId=@Model.EmailId&Status=@Model.SelectedStatus&EmployeeId=@Model.EmployeeId&userType=@Model.SelectedUserType&department=@Model.SelectedDepartment&role=@Model.SelectedRole&location=@Model.SelectedLocation">@i</a>
                                                </li>
                                            }
                                        }
                                        @if (pageNumber < Model.TotalPages)
                                        {
                                            int nextPage = pageNumber + 1;
                                            <li class="page-item">
                                                <a class="page-link" href="/User/GetAllUsers?PageNumber=@nextPage&FullName=@Model.FullName&UserName=@Model.UserName&EmailId=@Model.EmailId&Status=@Model.SelectedStatus&EmployeeId=@Model.EmployeeId&userType=@Model.SelectedUserType&department=@Model.SelectedDepartment&role=@Model.SelectedRole&location=@Model.SelectedLocation">Next</a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            }
                        </div>
                    </div>
                </div>
                <!-- /.col-->

            </div>
            <!-- /.row-->
        </div>
    </div>
</div>
