<script type="text/javascript">
    function Filter() {
        let fullName = $("#FullName").val();
        let userName = $("#UserName").val();
        let email = $("#EmailId").val();
        let employeeId = $("#EmployeeId").val();
        var selectElement = document.getElementById("SelectedStatus");
        var selectedValue = selectElement.value;
        let status = selectedValue;

        var selectUsertype=document.getElementById("SelectedUserType");
        var selectedUserType=selectUsertype.value;
        let userType=selectedUserType;

        var selectDepartmenttype=document.getElementById("SelectedDepartment");
        var selectedDepartment=selectDepartmenttype.value;
        let department=selectedDepartment;
        
        var selectRole=document.getElementById("SelectedRole");
        var selectedRole=selectRole.value;
        let role=selectedRole;

        
        var selectLocation=document.getElementById("SelectedLocation");
        var selectedLocation=selectLocation.value;
        let location=selectedLocation;

        if (fullName == "" && fullName.length == 0)
            fullName = null;
        if (userName == "" && userName.length == 0)
            userName = null;
        if (email == "" && email.length == 0)
            email = null;
        if (employeeId == "" && employeeId.length == 0)
            employeeId = null;
        if(userType=="" && userType.length==0)
            userType=null;
        if(department=="" && department.length==0)
            department=null;
        if(role=="" && role.length==0)
            role=null;
        if(location=="" && location.length==0)
            location=null;
        var model = {
            FullName: fullName,
            UserName: userName,
            EmployeeId: employeeId,
            EmailId: email,
            Status:status,
            userType:userType,
            department:department,
            role:role,
            location:location
        };
        $.ajax({
            url: '/User/GetAllUsers',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(model),
            success: function (response) {
                // Handle successful response from the server
                var div = document.getElementById("content");
                div.innerHTML = response;
            },
            error: function (xhr, status, error) {
                // Handle error response from the server
                console.error(xhr.responseText);
            }
        });
    }
</script>
<script type="text/javascript">
    function RejectUser() {
        var rejectComment = $("#reject").val();
        var userId = $("#userId").val();
        if (rejectComment == "") {
            alert("Please enter reason to reject user");
            $('#userModal').modal('show');
        }
        else {
            $.ajax({
                type: "GET",
                url: "/User/RejectUser",
                data: { comment: rejectComment, userId: userId },
                success: function (result) {
                    if (result.isValidPassword == false) {
                        alert("Plaese enter Correct Password to approve user");
                        $("#password").val('');
                        $('#approveModal').modal('show');
                    }
                    else {
                        $('#approveModal').modal('hide');
                        $('#userModal').modal('hide');
                        window.location.reload();
                    }
                },
                error: function (result) {
                    alert("Something went wrong please contact admin");
                }
            })
        }

    }
    function ApproveUser() {
        var password = $("#password").val();
        var userId = $("#userId").val();
        if (password == "") {
            alert("Please enter password to approve user");
            $("#password").val('');
            $('#approveModal').modal('show');
        }

        else {
            $.ajax({
                type: "GET",
                url: "/User/ApproveUser",
                data: { Password: password, UserId: userId },
                success: function (result) {
                    if (result.isValidPassword == false) {
                        alert("Plaese enter Correct Password to approve user");
                        $("#password").val('');
                        $('#approveModal').modal('show');
                    }
                    else {
                        $('#approveModal').modal('hide');
                        $('#userModal').modal('hide');
                        window.location.reload();
                    }
                },
                error: function (result) {
                    alert("Something went wrong please contact admin");
                }
            })
        }

    }
    function ClosePopup() {
        $('#approveModal').modal('hide');
    }
    function ApproveUserModalPopup() {
        $("#password").val('');
        $('#approveModal').modal('show');
    }

    var span = document.getElementsByClassName("close")[0];

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
        $('#userModal').modal('hide');
    }
    function performAction(Id) {
        $("#userId").val(Id);
        $.ajax({
            type: "GET",
            url: "/User/GetUserDetail?Id=" + Id,
            success: function (result) {
                $("#userType").val(result.userType);
                $("#FirstName").val(result.firstName);
                $("#LastName").val(result.lastName);
                $("#Email").val(result.email);
                $("#WindowsUserName").val(result.windowsUserName);
                $("#EmployeeId").val(result.employeeId);
                $("#Location").val(result.locationName);
                $("#Role").val(result.roleName);
                $("#Department").val(result.departmentName);
                $("#Remark").val(result.remark);
                $("#reject").val(result.remarkForReject);
                // $("#reject").val('');
                $('#userModal').modal('show');
            },
            error: function () {
                alert("fail");
            }
        });
    }

</script>
