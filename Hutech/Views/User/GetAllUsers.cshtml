@{
    Layout = !Context.Request.Headers["X-Requested-With"].ToString().Equals("XMLHttpRequest", StringComparison.OrdinalIgnoreCase) ? "_Layout" : null;
}
@model Hutech.Models.UsersViewModel
<div id="content">
    <div class="container-fluid">
        <div class="animated fadeIn">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <div  style="float:left;">
                                <i class="fa fa-align-justify"></i> Users
                                <a href="/User/AddUser">Add User</a>
                            </div>
                            <div style="float:right">
                                <div class="btn-group" role="group">
                                    <button class="btn btn-secondary dropdown-toggle" id="btnGroupExport" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Export</button>
                                    <div class="dropdown-menu" aria-labelledby="btnGroupExport">
                                        @* <a class="dropdown-item" href="/User/ExportToExcel?FullName=@Model.FullName">Export to Excel</a> *@
                                        <a class="dropdown-item" href="/User/ExportToExcel?FullName=@Model.FullName&UserName=@Model.UserName&EmailId=@Model.EmailId&Status=@Model.SelectedStatus&EmployeeId=@Model.EmployeeId&userType=@Model.SelectedUserType&department=@Model.SelectedDepartment&role=@Model.SelectedRole&location=@Model.SelectedLocation">Export to Excel</a> 
