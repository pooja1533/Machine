<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> Activity
                        <a href="/Activity/AddActivity">Add Activity</a>
                    </div>
                    <div class="card-body">
                        <table class="table table-responsive-sm">
                            <thead>
                                <tr>
                                    <th>Activity Name</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                    @*<th>Delete</th>*@
                                </tr>
                            </thead>
                            @{
                                int recordsPerPage = 10;
                                int pageNumber = Model.CurrentPage;
                                int pageSize = pageNumber + 4;
                                int rowNo = ((pageNumber - 1) * recordsPerPage);
                            }
                            <tbody>
                                @for (int i = 0; i < Model.GridRecords.Count; i++)
                                {
                                    <tr>
                                        <td>@Model.GridRecords[i].Name</td>

                                        @if (Model.GridRecords[i].IsActive)
                                        {
                                            <td>Active</td>
                                        }
                                        else
                                        {
                                            <td>InActive</td>
                                        }
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-secondary dropdown-toggle" id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                    <a class="dropdown-item" href="/Activity/EditActivity?id=@Model.GridRecords[i].Id">Edit</a>
                                                    <a class="dropdown-item" href="/Activity/DeleteActivity?id=@Model.GridRecords[i].Id" onclick="return confirm('Are you sure want to delete?')">Delete</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        @if (Model.TotalPages > 1)
                        {
                            <nav>
                                <ul class="pagination">
                                    @if (pageNumber > 1)
                                    {
                                        int prevPage = pageNumber - 1;
                                        <li class="page-item">
                                            <a class="page-link" href="/Activity/GetAllActivity?pageNumber=@prevPage">Prev</a>
                                        </li>
                                    }
                                    @for (int i = pageNumber; i <= Model.TotalPages && i <= pageSize; i++)
                                    {
                                        if (i == pageNumber)
                                        {
                                            <li class="page-item active">
                                                <a class="page-link" href="/Activity/GetAllActivity?pageNumber=@i">@i</a>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="/Activity/GetAllActivity?pageNumber=@i">@i</a>
                                            </li>
                                        }
                                    }
                                    @if (pageNumber < Model.TotalPages)
                                    {
                                        int nextPage = pageNumber + 1;
                                        <li class="page-item">
                                            <a class="page-link" href="/Activity/GetAllActivity?pageNumber=@nextPage">Next</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
            <!-- /.col-->

        </div>
        <!-- /.row-->
    </div>
</div>
@if (TempData["message"] != null)
{
    <script type="text/javascript">
        window.onload = function () {
            alert("@TempData["message"]");
            var url = "@TempData["RedirectURl"]";
            window.location.href = url;
        };
    </script>
}