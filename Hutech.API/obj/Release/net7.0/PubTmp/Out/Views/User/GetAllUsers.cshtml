<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> Users
                        @*<a href="/Role/AddRole">Add User</a>*@
                    </div>
                    <div class="card-body">
                        <table class="table table-responsive-sm">
                            <thead>
                                <tr>
                                    <th>FirstName</th>
                                    <th>LastName</th>
                                    <th>Username</th>
                                    <td>Address</td>
                                    <td>PhoneNumber</td>
                                    <th>User Role</th>
                                    <th>Action</th>
                                    @*<th>Delete</th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @for (int i = 0; i < Model.Count; i++)
                                {
                                    <tr>
                                        <td>@Model[i].FirstName</td>
                                        <td>@Model[i].LastName</td>
                                        <td>@Model[i].UserName</td>
                                        <td>@Model[i].Address</td>
                                        <td>@Model[i].PhoneNumber</td>
                                        <td>@Model[i].UserRole</td>
                                        <th>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-secondary dropdown-toggle" id="btnGroupDrop1" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Action</button>
                                                <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                                    <a class="dropdown-item" href="/User/EditUser?id=@Model[i].Id">Edit</a>
                                                    <a class="dropdown-item" href="/User/DeleteUser?id=@Model[i].Id" onclick="return confirm('Are you sure want to delete?')">Delete</a>
                                                </div>
                                            </div>
                                        </th>
                                        @*<td><a href="/User/EditUser?id=@Model[i].Id">Edit</a></td>
                                        <td><a href="/User/DeleteUser?id=@Model[i].Id" onclick="return confirm('Are you sure want to delete?')">Delete</a></td>*@
                                    </tr>
                                }

                            </tbody>
                        </table>
